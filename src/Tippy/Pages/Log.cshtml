@page
@model Tippy.Pages.LogModel
@{
    ViewData["Title"] = "Logs";
}


@if (Model.ActiveProject != null)
{
    <h1 class="title">Logs</h1>

    <input type="hidden" id="project-id" value="@Model.ActiveProject.ID" />
    <div class="log-box" id="log-box"></div>

    @section Scripts {
        @{ await Html.RenderPartialAsync("_SignalrScriptsPartial"); }
    }
}
else
{
    <div class="notification is-warning">
        <p class="ml-3">
            <span class="icon has-text-danger">
                <i class="fas fa-exclamation-triangle fa-3x"></i>
            </span>
        </p>
        <p>Current project/chain is not running. Please <a asp-page="/Home/Index">start</a> and select a project first.</p>
    </div>
}
