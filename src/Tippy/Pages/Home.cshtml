@page
@model Tippy.Pages.HomeModel
@{
    ViewData["Title"] = "Dashboard";
}

<h1 class="title">Dashboard</h1>

@if (TempData["Message"]?.ToString().Length > 0)
{
    <div class="notification is-success">
        <button class="delete"></button>
        <div>@TempData["Message"]</div>
    </div>
}

<form method="post">
    @if (Model.IsNodeRunning)
    {
        <div class="field is-grouped">
            <div class="control">
                <div class="tags has-addons">
                    <span class="tag is-dark">Node</span>
                    <span class="tag is-success">running</span>
                </div>
            </div>
        </div>
        <div class="field is-grouped">
            <div class="control">
                <button class="button is-link is-small" asp-page-handler="Restart">Restart node</button>
            </div>
        </div>
    }
    else
    {
        <div class="field is-grouped">
            <div class="control">
                <div class="tags has-addons">
                    <span class="tag is-dark">Node</span>
                    <span class="tag is-danger">stopped</span>
                </div>
            </div>
        </div>
        <div class="field is-grouped">
            <div class="control">
                <button class="button is-link is-small" asp-page-handler="Start">Start node</button>
            </div>
        </div>
    }
</form>
