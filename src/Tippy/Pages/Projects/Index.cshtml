@page
@model Tippy.Pages.Projects.IndexModel

@{ ViewData["Title"] = "Projects"; }

<h1 class="title">Projects</h1>

<p>
    <a asp-page="Create" class="button is-link is-primary">Create new project</a>
</p>

<table class="table is-striped is-hoverable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].Chain)
            </th>
            <th>
                RPC
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].LockArg)
            </th>
            <th>Status</th>
            <th>Control</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Project) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chain)
            </td>
            <td>
                http://localhost:@Html.DisplayFor(modelItem => item.NodeRpcPort)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LockArg)
            </td>
            <td>
                <span class="tag is-light">Stopped</span>
                <span class="tag is-success">Running</span>
            </td>
            <td>
              <a class="button is-success is-small">Start</a>
              <a class="button is-danger is-small">Stop</a>
              <a class="button is-warning is-small">Restart</a>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
