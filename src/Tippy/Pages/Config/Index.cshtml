@page
@model Tippy.Pages.Config.IndexModel
@{
    ViewData["Title"] = "Configuration";
}

<h1 class="title">Configuration</h1>

<form method="post">
    <div asp-validation-summary="All"></div>

    @if (TempData["Message"]?.ToString().Length > 0)
    {
        <div class="notification is-success">
            <button class="delete"></button>
            <div>@TempData["Message"]</div>
        </div>
    }

    <div class="field">
        <div class="control">
            <label asp-for="LockArg" class="label"></label>
            <input asp-for="LockArg" class="input" placeholder="Lock Arg" />
        </div>
    </div>

    <div class="field">
        <div class="control">
            <p class="help is-danger is-size-6">You need to <a asp-page="/Home" class="has-text-weight-semibold">restart the node</a> for the changes to take effect.</p>
        </div>
    </div>

    <div class="field is-grouped">
        <div class="control">
            <button class="button is-link is-small">Save</button>
        </div>
        <!--
          <div class="control">
            <button class="button is-link is-light">Cancel</button>
          </div>
        -->
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
