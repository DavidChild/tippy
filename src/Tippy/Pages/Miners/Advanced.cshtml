@page
@model Tippy.Pages.Miners.AdvancedModel
@{
    ViewData["Title"] = "Advanced mining";
}

<style>
    hr {
        background: white;
        height: 1px;
    }
</style>

<h1 class="title">Advanced mining</h1>

<h2>Mine with default miner</h2>
@if (Model.IsMinerRunning)
{
    <form method="post">
        <div class="field">
            <div class="control">
                <button asp-page="/Miners/Stop" asp-route-id="@Model.ActiveProject!.Id" class="button is-light" style="color: #ff6960;">
                    <span class="icon">
                        <i class="fas fa-pause"></i>
                    </span>
                    <span>Stop</span>
                </button>
            </div>
        </div>
    </form>
}
else
{
<form method="post">
    <div class="field">
        <div class="control">
            <button asp-page="/Miners/Start" asp-route-id="@Model.ActiveProject!.Id" class="button is-light" style="color: #b33ffe;">
                <span class="icon">
                    <i class="fas fa-play"></i>
                </span>
                <span>Start</span>
            </button>
            </div>
        </div>
</form>
}

<hr />

<h2>Mine a single block manually</h2>
<form method="post">
        <div class="control">
            <button asp-page="/Miners/GenerateBlock" asp-route-id="@Model.ActiveProject!.Id" disabled=@Model.IsMinerRunning class="button is-light" style="color: #b33ffe;">
                <span class="icon">
                    <i class="fas fa-hammer"></i>
                </span>
                <span style="font-size: 80%;">Mine a block</span>
            </button>
        </div>
</form>

<hr />
